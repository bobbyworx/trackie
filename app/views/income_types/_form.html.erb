<%= simple_form_for @income_type, :html => { :class => 'form-horizontal' } do |f| %>

<% if @income_type.errors.any? %>
    <ul>
    <% @income_type.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

    <%= f.input :name %>
    <%= f.association :parent_income_type %>
    
    <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                income_types_path, :class => 'btn' %>
  </div>
<% end %>


