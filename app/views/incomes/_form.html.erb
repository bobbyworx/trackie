<%= form_for @income do |f| %>


  <p>
  <%= f.label :income_type_id %>
  <%= f.grouped_collection_select :income_type_id, IncomeType.order(:name), :child_income_types, :name, :id, :name, include_blank: true %>
  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </p>
 
  <p>
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </p>
 
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
               incomes_path, :class => 'btn' %>
  </div>
<% end %>