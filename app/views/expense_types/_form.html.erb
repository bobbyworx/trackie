<%= simple_form_for @expense_type, :html => { :class => 'form-horizontal' } do |f| %>
<% if @expense_type.errors.any? %>
    <ul>
    <% @expense_type.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>
    <%= f.input :name %>
  
    <%= f.association :parent_expense_type %>
    
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                expense_types_path, :class => 'btn' %>
  </div>
<% end %>

